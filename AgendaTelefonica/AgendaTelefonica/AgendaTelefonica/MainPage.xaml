<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="AgendaTelefonica.MainPage"
            xmlns:android="clr-namespace:Xamarin.Forms.PlatformConfiguration.AndroidSpecific;assembly=Xamarin.Forms.Core"
            android:TabbedPage.ToolbarPlacement="Bottom"
            xmlns:local="clr-namespace:AgendaTelefonica.PagesTab"
            NavigationPage.HasNavigationBar="False" 
            android:TabbedPage.IsSwipePagingEnabled="False"
            BarBackgroundColor="{StaticResource PrimaryColor}"
            SelectedTabColor="{StaticResource AppPrimaryColor}"
            BarTextColor="{StaticResource AppPrimaryColor}"
            >


    <NavigationPage Title="Favorite" IconImageSource="favorite_border.png" BarTextColor="{StaticResource TextColor}" >
        <x:Arguments>
            <local:Favorite/>
        </x:Arguments>
    </NavigationPage>

    <NavigationPage Title="History" IconImageSource="history.png" BarTextColor="{StaticResource TextColor}">
        <x:Arguments>
            <local:History/>
        </x:Arguments>
    </NavigationPage>

    <NavigationPage Title="Contacts"  IconImageSource="perm_contact_calendar.png" BarTextColor="{StaticResource TextColor}">
        <x:Arguments>
            <local:Contacts/>
        </x:Arguments>
    </NavigationPage>


</TabbedPage>
