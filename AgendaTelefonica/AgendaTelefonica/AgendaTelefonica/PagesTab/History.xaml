<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AgendaTelefonica.PagesTab.History">

    <NavigationPage.TitleView>
        <Label Text="History" FontSize="Large" TextColor="White" FontAttributes="Bold" />
    </NavigationPage.TitleView>


    <StackLayout Padding="20">
        <Button x:Name="dispHistory" Text="Diplay Contact" Clicked="dispContact_Clicked"/>
        <ListView x:Name="historyListView" ItemSelected="historyListView_ItemSelected" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell Height="65">
                        <StackLayout Spacing="1">
                            <Label x:Name="nameContact" Text="{Binding Name}" VerticalOptions="Center" FontSize="Medium"/>
                            <Label x:Name="secondName" Text="{Binding Date}" VerticalOptions="Center" FontSize="Small"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>

</ContentPage>